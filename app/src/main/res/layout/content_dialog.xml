<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/title0"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:gravity="right|center_vertical"
            android:text="@string/dialog_note_title"
            android:textColor="#bb333333" />

        <EditText
            android:id="@+id/edit0"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/title0"
            android:background="@null"
            android:textColor="#ee333333"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignLeft="@id/edit0"
            android:layout_alignRight="@id/edit0"
            android:layout_below="@id/edit0"
            android:background="#33333333" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/title1"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:gravity="right|top"
            android:text="@string/dialog_note_content"
            android:textColor="#bb333333" />

        <EditText
            android:id="@+id/edit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/title1"
            android:background="@null"
            android:gravity="top"
            android:minLines="7"
            android:maxLines="7"
            android:textColor="#ee333333"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignLeft="@id/edit1"
            android:layout_alignRight="@id/edit1"
            android:layout_below="@id/edit1"
            android:background="#33333333" />
    </RelativeLayout>

</LinearLayout>