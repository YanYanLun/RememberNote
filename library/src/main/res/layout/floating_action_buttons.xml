<com.dreamdesigner.floatingactionbutton.FloatingActionButtonPlus xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/FabPlus"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    app:mBackgroundColor="@android:color/transparent"
    app:layout_behavior="com.dreamdesigner.floatingactionbutton.FabBehavior"
    app:switchFabColor="#DB4537"
    app:switchFabIcon="@mipmap/ic_add_white_48dp">

    <com.dreamdesigner.floatingactionbutton.FabTagLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tagText="@string/action_note_write">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_write_comment"
            app:backgroundTint="#468cb7"
            app:fabSize="mini" />
    </com.dreamdesigner.floatingactionbutton.FabTagLayout>

    <com.dreamdesigner.floatingactionbutton.FabTagLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tagText="@string/action_audio_recorder">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_settings_voice_white"
            app:backgroundTint="#818aa7"
            app:fabSize="mini" />
    </com.dreamdesigner.floatingactionbutton.FabTagLayout>

</com.dreamdesigner.floatingactionbutton.FloatingActionButtonPlus>